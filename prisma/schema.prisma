generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  bookId          String @id @default(uuid())
  title           String
  genre           String
  publishedYear   Int
  totalCopies     Int
  availableCopies Int
}

model Author {
  authorId    String   @id @default(uuid())
  name        String
  bio         String
  dateOfBirth DateTime
}

model Member {
  memberId       String   @id @default(uuid())
  name           String
  email          String   @unique
  phone          String
  membershipDate DateTime
}
